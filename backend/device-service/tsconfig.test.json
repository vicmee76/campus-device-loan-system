{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["node", "jest"],
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "src/test/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "src/test",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}

