# Example Terraform variables file
# Copy this to terraform.tfvars and fill in your values
# terraform.tfvars is gitignored and should not be committed

# Azure Subscription ID (optional - will use default from Azure CLI if not provided)
# Get your subscription ID: az account show --query id -o tsv
# subscription_id = "972efdff-ae97-4f78-bb69-6a1c6bd2fdf8"

location            = "West Europe"
resource_group_name = "campus-device-loan-rg"
environment         = "dev"

# Database credentials (sensitive - use Azure Key Vault or environment variables)
db_admin_user     = "adminuser"
db_admin_password = "YourSecurePassword123!"
db_name           = "campus_device_loan"

# Database URL (sensitive - will be constructed from PostgreSQL server)
# Format: postgresql://username:password@hostname:5432/database_name
# Note: Update this after PostgreSQL server is created with the actual FQDN
database_url = "postgresql://adminuser:YourSecurePassword123!@campus-device-loan-db.postgres.database.azure.com:5432/campus_device_loan"

# JWT Secret (sensitive - must match in both services)
jwt_secret = "your-super-secret-jwt-key-change-this-in-production"

# CORS Origin (use * for all origins or specific domain)
cors_origin = "*"

# Tags
tags = {
  Project     = "Campus Device Loan System"
  ManagedBy   = "Terraform"
  Environment = "dev"
  Team        = "Platform"
}

