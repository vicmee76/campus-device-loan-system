# Example Terraform variables file
# Copy this to terraform.tfvars and fill in your values
# terraform.tfvars is gitignored and should not be committed

# DigitalOcean API Token (sensitive - get from https://cloud.digitalocean.com/account/api/tokens)
digitalocean_token = "your-digitalocean-api-token"

# GitHub repository URL (format: owner/repo)
github_repo_url = "vicmee76/campus-device-loan-system"

# External database connection URL (sensitive - database is managed outside Terraform)
database_url = "postgresql://user:password@host:port/database?sslmode=require"

# Environment
environment = "dev"

# Region
region = "nyc3"
